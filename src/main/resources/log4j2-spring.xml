<Configuration status="WARN" packages="com.metaverse.workflow.logging">

    <Appenders>

        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{ISO8601} %-5level %logger - %msg%n"/>
        </Console>

        <SplunkSdkAppender name="SplunkSdk"/>

    </Appenders>

    <Loggers>

        <Logger name="com.metaverse.workflow" level="info" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="SplunkSdk"/>
        </Logger>

        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="SplunkSdk"/>
        </Root>

    </Loggers>

</Configuration>
